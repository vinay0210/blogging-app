<%= form_for(@post) do |f| %>
    
    <% if @post.errors.any? %>
          <% @post.errors.full_messages.each do |message| %>
          noty({text: '<%= message %>', type: 'error', theme: 'defaultTheme',maxVisible: 5,template: '<div class="noty_message"><span class="noty_text"></span><div class="noty_close"></div></div>',
          progressBar: true});
          <% end %>
    <% end %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
